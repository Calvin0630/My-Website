<%- include ("../partials/head"); %>
<div class="view-container">
    <%- include ("../partials/sidebar"); %>

    <div class="right-panel">

        <%- include ("../partials/header"); %>

        <div class='content-container'>
            <h1>Visual Synth</h1>
            <h2>This is a digital synth I built that functions in the pixel domain.</h2>
            <button onclick="toggleFullScreen()">Try it</button>
            <div class="synth-table">
                <table>
                    <tbody>
                        <tr>
                            <td>Frequency</td>
                            <td>
                                <div class="slidecontainer">
                                    <input type="range" min="0.0001" max="10" step="0.01" value="1" class="slider" id="freq-slider" oninput="onFreqSliderChange(this.value)">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Origin X</td>
                            <td>
                                <div class="slidecontainer">
                                    <input type="range" min="-1" max="1" step="0.01" value="0" class="slider" id="freq-slider" oninput="onOriginXSliderChange(this.value)">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>Origin Y</td>
                            <td>
                                <div class="slidecontainer">
                                    <input type="range" min="-1" max="1" step="0.01" value="0" class="slider" id="freq-slider" oninput="onOriginYSliderChange(this.value)">
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <canvas class="webgl" id="webgl"></canvas>
            <script src="/js/webgl/three.js"></script>
            <!--a helper for mouse input in three.js-->
            <script src="/js/webgl/main.js"></script>

            
        </div>>
    </div>
</div>


<%- include ("../partials/footer"); %>